@model Surveyapp.Models.QuestionGroup

@{
    ViewBag.Title = "Edit question group";
    Layout = "_Layout";
}

<h4>Edit question group</h4>
<hr/>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubjectId">
            <div class="wrapper">
                <div class="form-group col-md-12 question-div" style="display: flex;">
                    <div class="form-group col-md-4">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@ViewBag.SurveySubjectId">Back to List</a>
</div>
