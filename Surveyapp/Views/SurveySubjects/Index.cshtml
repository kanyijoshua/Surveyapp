@model IEnumerable<Surveyapp.Models.SurveySubject>

@{
    ViewData["Title"] = "Survey Subject";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-action="Index" asp-controller="Surveys">
                <span>My Surveys</span>
            </a>
        </li>
    
        <li class="breadcrumb-item">
            <a asp-action="Index" asp-controller="SurveyCategories" asp-route-id="@ViewBag.SurveyId">
                <span>Survey Subject Categories</span>
            </a>
        </li>
        <li class="breadcrumb-item active">
            <a>
                <span>Survey Subject</span>
            </a>
        </li>
    </ol>
</nav>

@*<h1>Survey Subject</h1>*@

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.CategoryId">Create New <i class="fa fa-plus-square"></i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubjectName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.StateCorporation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chairpersion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndofTerm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubjectTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.StateCorporation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chairpersion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndofTerm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectTypeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Id)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" title="edit @item.SubjectName"><i class="fa fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.Id" title="view @item.SubjectName details"><i class="fa fa-eye"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id" title="delete @item.SubjectName"><i class="fa fa-trash-alt"></i></a> |
                <a asp-controller="ResponseTypes" asp-action="Index" asp-route-id="@item.Id" title="view or add response to @item.SubjectName">Response options</a> |
                @if (item.ResponseTypes?.ResponseName!= null)
                {
                    <a asp-controller="Questions" asp-action="index" asp-route-id="@item.Id" title="view or add question to @item.SubjectName">Manage questions</a>
                }
                else
                {
                    <a asp-controller="Questions" asp-action="index" asp-route-id="@item.Id" title="Add response options first in-order to add question">Add question</a>
                    @*<p><small title="Add response options first in-order to add question">Add question</small></p>*@
                }
                
            </td>
        </tr>
}
    </tbody>
</table>
