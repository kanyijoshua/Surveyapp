@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "All Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-success">All Roles</h1>

@if (Model.Any())
{

    foreach (var role in Model)
    {
        <br />
        <div class="card">
            <div class="card-header">
                Role Id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    @role.Name
                </h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                    <a class="btn btn-warning"
                       asp-action="EditRole" asp-controller="ManageUsers"
                       asp-route-id="@role.Id">
                        Edit
                    </a>
                    <button type="submit" class="btn btn-outline-danger"
                            onclick="return confirm('Are you sure that you want to delete role : @role.Name')">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Roles Created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a new Role
            </h5>
            <a class="btn btn-primary"
               asp-action="CreateRole" asp-controller="ManageUsers">
                Create Role
            </a>
        </div>
    </div>
}

<hr />
<div class="mt-3">
    <a class="btn btn-primary"
       asp-action="CreateRole" asp-controller="ManageUsers">
        Add New Role
    </a>
</div>