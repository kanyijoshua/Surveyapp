@model List<Surveyapp.ViewModel.UserRolesViewModel>
@{
    var userId = ViewBag.userId;
    var userName = ViewBag.userName;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3 class="text-warning">Manage User Roles for</h3>
            <h4 class="text-success text-center">@userName</h4>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
        </div>

        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-outline-warning" />
            <a class="btn btn-success"
               asp-action="EditUser" asp-controller="ManageUsers"
               asp-route-id="@userId">
                Cancel
            </a>
        </div>
    </div>
</form>
